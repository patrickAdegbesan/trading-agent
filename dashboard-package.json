{
  "name": "crypto-trading-dashboard",
  "version": "1.0.0",
  "description": "Real-time trading bot monitoring dashboard",
  "main": "src/dashboard/dashboard-server.ts",
  "scripts": {
    "dashboard": "ts-node src/dashboard/dashboard-server.ts",
    "dashboard:dev": "nodemon --exec ts-node src/dashboard/dashboard-server.ts",
    "dashboard:prod": "npm run build:dashboard && node dist/dashboard/dashboard-server.js",
    "build:dashboard": "tsc --project tsconfig.dashboard.json"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13"
  }
}