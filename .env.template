# Environment Configuration Template
# Copy this to .env and fill in your actual values

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_key_here
BINANCE_TESTNET=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/crypto_trading
TIMESCALE_DB_URL=postgresql://user:password@localhost:5432/timescaledb
REDIS_URL=redis://localhost:6379

# Trading Configuration
TRADING_PAIRS=BTCUSDT,ETHUSDT,ADAUSDT
INITIAL_CAPITAL=10000
MAX_POSITION_SIZE=0.1
MAX_DAILY_DRAWDOWN=0.05
LEVERAGE=1
TRADING_INTERVAL_MS=5000

# Risk Management
KELLY_FRACTION=0.25
MIN_TRADE_SIZE=10
MAX_TRADES_PER_DAY=100
CIRCUIT_BREAKER_LOSS_PERCENT=0.1

# ML Configuration
MODEL_RETRAIN_INTERVAL_HOURS=24
LOOKBACK_PERIODS=200
FEATURE_WINDOW_SIZE=50
MIN_TRAINING_SAMPLES=1000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/trading.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=3000
ALERT_WEBHOOK_URL=

# Environment
NODE_ENV=development
PORT=8080